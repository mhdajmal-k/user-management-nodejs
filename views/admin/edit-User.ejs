<%- include("../layout/headerAdmin") -%>
   
<h1 style="text-align: center;">Edit user</h1>


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Edit</h3>
                </div>
                <div class="card-body">
                    <form action="" method="post">
                        <!-- Username Input -->
                        <div class="form-group">
                            <label for="username">Name</label>
                            <input type="text" class="form-control" id="name" name="name" value="<%= user.name %>" required>
                        </div>

                        <!-- Password Input -->
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="text" class="form-control" id="email" name="email" required value="<%= user.email %>">
                        </div>
                        <div class="form-group">
                            <label for="moble">Mobile</label>
                            <input type="text" class="form-control" id="mobile" name="mobile" required value="<%= user.mobile %>">
                        </div>
                        <div class="form-group">

                            <input type="hidden" class="form-control" id="id" name="id" required value="<%= user._id %>">
                        </div>

                        


                        <!-- Login Button -->
                        
                        <button type="submit" class="btn btn-success btn-block">update user</button>
                        <button  class="btn btn-info btn-block" ><a href="/admin/dashboard" style="text-decoration: none; color: black;">To dashboard</a></button>

                    </form>               
                </div>
                
                
            </div>
        </div>
    </div>
>
</div>


<%- include("../layout/footer") -%>
